generator client {
  provider        = "prisma-client-js"
  output          = "./generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  GUEST
  ADMIN
  ORGANISER
}

model User {
  id       String    @id
  role     UserRole
  username String
  email    String    @unique
  password String
  tickets  Ticket[]
  posts    Post[]
  comments Comment[]
}

model Event {
  id        String   @id
  name      String
  location  String
  startDate DateTime
  endDate   DateTime
  tickets   Ticket[]
}

model Ticket {
  id      String @id
  price   Float
  eventId String
  event   Event  @relation(fields: [eventId], references: [id])
  userId  String
  user    User   @relation(fields: [userId], references: [id])
}

model Post {
  id        String    @id
  title     String
  text      String
  createdAt DateTime
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  comments  Comment[]
}

model Comment {
  id        String   @id
  text      String
  createdAt DateTime
  postId    String
  post      Post     @relation(fields: [postId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
